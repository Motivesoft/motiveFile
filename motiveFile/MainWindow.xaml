<Window x:Class="motiveFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:motiveFile"
        mc:Ignorable="d"
        Title="motiveFile" Height="700" Width="600" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Stretch" Height="23" TextWrapping="NoWrap" Text="TextBox" VerticalAlignment="Top" KeyDown="textBox_KeyDown"/>
        <ListView x:Name="listView" Margin="0,23,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Modified date" DisplayMemberBinding="{Binding ModifiedDate}"/>
                    <GridViewColumn Header="Size" DisplayMemberBinding="{Binding Size}"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
